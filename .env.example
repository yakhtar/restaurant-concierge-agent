# ================================
# Restaurant Concierge Agent Configuration
# ================================

# Node Environment
NODE_ENV=development
PORT=3000

# ================================
# WhatsApp Business Cloud API
# ================================
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# ================================
# Google Places API
# ================================
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# ================================
# OpenTable API (Partner Integration)
# ================================
OPENTABLE_API_KEY=your_opentable_api_key_here
OPENTABLE_CLIENT_ID=your_opentable_client_id_here
OPENTABLE_CLIENT_SECRET=your_opentable_client_secret_here
OPENTABLE_ENVIRONMENT=sandbox
# OPENTABLE_ENVIRONMENT=production

# ================================
# Database Configuration
# ================================
# SQLite (default for development)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/restaurant-concierge.db

# Redis for caching and session management
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ================================
# Authentication & Security
# ================================
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ================================
# n8n Integration
# ================================
N8N_WEBHOOK_URL=your_n8n_webhook_url_here
N8N_API_KEY=your_n8n_api_key_here

# ================================
# OpenAI API (for AI responses)
# ================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# ================================
# Anthropic Claude API (alternative)
# ================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ================================
# Application Settings
# ================================
# Maximum number of restaurant results to return
MAX_RESTAURANT_RESULTS=10

# Default search radius in meters
DEFAULT_SEARCH_RADIUS=5000

# Session timeout in minutes
SESSION_TIMEOUT=60

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# ================================
# Feature Flags
# ================================
ENABLE_RESERVATION_BOOKING=true
ENABLE_DIETARY_RESTRICTIONS=true
ENABLE_CUSTOMER_PREFERENCES=true
ENABLE_LOCATION_SHARING=true
ENABLE_MENU_ANALYSIS=false

# ================================
# Timezone & Localization
# ================================
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# ================================
# External Services (Optional)
# ================================
# Yelp API for additional restaurant data
YELP_API_KEY=your_yelp_api_key_here

# Foursquare API for venue data
FOURSQUARE_API_KEY=your_foursquare_api_key_here

# Zomato API for menu and reviews
ZOMATO_API_KEY=your_zomato_api_key_here

# ================================
# Webhook URLs
# ================================
WEBHOOK_BASE_URL=https://yourdomain.com
WEBHOOK_SECRET=your_webhook_secret_here